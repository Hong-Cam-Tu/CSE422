@{
    ViewData["Title"] = "Borrow a Book";
}
<h2>Borrow a Book</h2>
<form method="post" action="/Transactions/Borrow">
    <div class="form-group">
        <label for="memberId">Member</label>
        <select name="memberId" class="form-control">
            @foreach (var member in ViewBag.Members)
            {
                <option value="@member.Value">@member.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="bookId">Book</label>
        <select name="bookId" class="form-control">
            @foreach (var book in ViewBag.Books)
            {
                <option value="@book.Value">@book.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Borrow</button>
</form>